@{
    ViewBag.Title = "Книжный магазин";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (var z in ViewBag.Books)
        {
        <tr>
            <td><p>@z.Name</p></td>
            <td><p>@z.Author</p></td>
            <td><p>@z.Price</p></td>
            <td><p><a href="/Home/Buy/@z.Id">Купить</a></p></td>
        </tr>
        }
    </table>
</div>